{
  "dateFormat": "dddd, MMMM Do, YYYY, h:mmA",
  "files": {
    "patternsPattern": "\\d+?-"
  },
  "paths": {
    "data"       : "./source/data",
    "dist"       : "./dist",
    "gulpTasks"  : "./build/gulp",
    "partials"   : "./source/patterns",
    "patterns"   : "./source/patterns",
    "source"     : "./source",
    "static"     : "./static",
    "styleGuide" : "./build/styleGuide"
  },
  "dest": {
    "assets"   : "./static",
    "patterns" : "./static",
    "css"      : "./static/css",
    "vendor"   : "./static/vendor"
  },
  "src": {
    "patterns"    : "./source/patterns/**/*.hbs",
    "patternDirs" : "./source/patterns/**/*",
    "assets"      : "./source/assets/**/*",
    "static"      : "./static/**",
    "styles"      : "./source/styles/**/*.scss",
    "templates"   : "./source/patterns/**/*.template",
    "vendor"      : "./vendor/**/*"
  }
}
