{
  "files": {
    "patternsPattern": "\\d+?-"
  },
  "paths": {
    "static"   : "./static",
    "data"     : "./source/data",
    "partials" : "./source/patterns"
  },
  "dest": {
    "assets"   : "./static",
    "patterns" : "./static/patterns",
    "css"      : "./static/css"
  },
  "src": {
    "patterns" : "./source/patterns/**/*.hbs",
    "assets"   : "./source/assets/**/*",
    "styles"   : "./source/styles/**/*.scss"
  }
}
