{
  "files": {
    "patternsPattern": "\\d+?-"
  },
  "paths": {
    "static"   : "./static",
    "source"   : "./source",
    "data"     : "./source/data",
    "partials" : "./source/patterns"
  },
  "dest": {
    "assets"   : "./static",
    "patterns" : "./static/patterns",
    "css"      : "./static/css",
    "vendor"   : "./static/vendor"
  },
  "src": {
    "patterns" : "./source/patterns/**/*.hbs",
    "assets"   : "./source/assets/**/*",
    "styles"   : "./source/styles/**/*.scss",
    "vendor"   : "./vendor/**/*"
  }
}
