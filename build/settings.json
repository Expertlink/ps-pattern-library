{
  "files": {
    "patternsPattern": "\\d+?-"
  },
  "paths": {
    "data"     : "./source/data",
    "gulpTasks": "./build/gulp/tasks",
    "partials" : "./source/patterns",
    "patterns" : "./source/patterns",
    "source"   : "./source",
    "static"   : "./static"
  },
  "dest": {
    "assets"   : "./static",
    "patterns" : "./static/patterns",
    "css"      : "./static/css",
    "vendor"   : "./static/vendor"
  },
  "src": {
    "patterns"    : "./source/patterns/**/*.hbs",
    "patternDirs" : "./source/patterns/**/*",
    "assets"      : "./source/assets/**/*",
    "styles"      : "./source/styles/**/*.scss",
    "vendor"      : "./vendor/**/*"
  }
}
