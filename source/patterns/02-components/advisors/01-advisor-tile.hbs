<div class="advisor-tile">
  <div class="advisor-tile-object">
    <a href="">
      <img src="{{photo}}" alt=" " class="img-responsive img-rounded img-shadow">
    </a>
  </div>
  <div class="advisor-tile-body">
    <div class="advisor-tile-heading">
      <h4 class="advisor-tile-heading-name">
        <a href="">{{name}} x{{ext}}</a>
      </h4>
      <p class="advisor-tile-heading-rating">
        <a href="" class="stars stars-4-5">4&frac12; stars</a>
      </p>
    </div>
    <p class="advisor-tile-availability text-success" style="margin-bottom: 0.25em;">
      <b>I&rsquo;m Available</b>
      <small>until 7:42pm</small>
    </p>
    <p class="small" style="margin-top: 0;">
      <del class="text-muted">${{rate}}</del>
      <b>${{promoRate}}/min</b>
    </p>
  </div>
  <div class="advisor-tile-actions">
    <ul>
      {{#randomIf}}
        <li>
          <a class="btn btn-block btn-success btn-shaded" href="#">Chat Now</a>
        </li>
        <li>
          <a class="btn btn-block btn-success btn-shaded" href="#">Call Me Now</a>
        </li>
      {{else}}
        <li>
          <a class="btn btn-block btn-info btn-shaded" href="#">View Schedule</a>
        </li>
      {{/randomIf}}
    </ul>
  </div>
</div>
