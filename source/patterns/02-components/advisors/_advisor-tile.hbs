<div class="advisor-tile">
  <a class="link-block advisor-tile-main advisor-tile-group" href="#">
    <div class="advisor-tile-main-object">
      <div class="advisor-tile-photo">
        <img
          class="img-rounded img-shadow"
          src="{{photo}}"
          alt=" ">
        {{#if staffPick}}
          <div class="advisor-tile-staff-pick">
            Psychic Source is pleased to highlight this gifted Advisor
          </div>
        {{/if}}
        {{#if showcase}}
          <div class="advisor-tile-showcase">
            Recommendations from the Psychic Source team
          </div>
        {{/if}}
      </div>
    </div>
    <div class="advisor-tile-main-body">
      <h4 class="text-primary">{{firstName}} x{{ext}}</h4>
      <div class="advisor-tile-meta">
        <p class="advisor-tile-meta-group stars stars-{{replace rating "." "-"}}">
          {{{formatFraction rating}}} stars
        </p>
        <p class="advisor-tile-meta-group">
          {{#if promoPrice}}
            <del class="text-muted">${{formatCurrency basePrice}}</del>
            <b>${{formatCurrency promoPrice}}/min</b>
          {{else}}
            <b>${{formatCurrency basePrice}}/min</b>
          {{/if}}
        </p>
        {{#if channel}}  
          <p class="advisor-tile-meta-group">
            {{channel}} <b>{{channelPromo}}</b> (${{formatCurrency channelPrice}}/min)
          </p>
        {{/if}}
      </div>
      <div class="advisor-tile-meta">
        
      </div>
      {{#if online}}
        {{#if available}}
          <p class="text-success"><b>Available</b> till {{loggedInTill}}</p>
        {{else}}
          <p class="text-danger"><b>Busy</b> logged on till {{loggedInTill}}</p>
        {{/if}}
      {{else}}
        <p class="text-muted"><b>Offline</b></p>
      {{/if}}
    </div>
  </a>
  <ul class="arrange arrange-equal{{#if returnCall}}-sm{{/if}} arrange-gutter advisor-tile-group">
    {{#if available}}
      {{#if chat}}
        <li class="arrange-fill">
          <a class="btn btn-block btn-sm btn-success btn-shaded" href="#">Chat Now</a>
        </li>
      {{/if}}
      {{#if call}}
        <li class="arrange-fill">
          <a class="btn btn-block btn-sm btn-success btn-shaded" href="#">Call Now</a>
        </li>
      {{else}}
        {{#if returnCall}}
          <li class="arrange-fill">
            <a class="btn btn-block btn-sm btn-success btn-shaded" href="#">Get Return Call</a>
          </li>
        {{/if}}
      {{/if}}
    {{else}}
      {{#if returnCall}}
        <li class="arrange-fill">
          <a class="btn btn-block btn-sm btn-success btn-shaded" href="#">Get a Return Call</a>
        </li>
      {{else}}
        <li class="arrange-fill">
          <a class="btn btn-block btn-sm btn-info btn-shaded" href="#">View Schedule</a>
        </li>
      {{/if}}
    {{/if}}
  </ul>
</div>
