<div class="masthead">

  <a class="masthead-logo" href="">
    <picture class="picture-responsive">
      <source srcset="/images/logo/ps-logo-tagline.png" media="(min-width: 994px)">
      <img srcset="/images/logo/ps-logo.png" src="/images/logo/ps-logo.png" alt="Psychic Source - Life's possibilites. Revealed.">
    </picture>
  </a>

  <div class="masthead-body">

    <div class="masthead-controls">
      <ul class="masthead-menu">
        <li>
          <a href="" class="btn btn-link text-default">
            Login
          </a>
        </li>
        <li class="hidden-xs hidden-sm hidden-md dropdown">
          <a href="" class="btn btn-link text-default" id="customer-care-label" data-toggle="dropdown" data-target="#" aria-haspopup="true" role="button" aria-expanded="false">
            Customer Care
            <span class="arrow-down text-muted"></span>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="customer-care-label">
            <li role="presentation"><a role="menuitem" tabindex="-1" href="">LIVE Help</a></li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="">Contact Us</a></li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="">FAQs</a></li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="">Psychic? Apply Now</a></li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="">More&hellip;</a></li>
          </ul>
        </li>
        <li class="masthead-search-toggle">
          <a href="" class="btn btn-sunrise btn-shaded">
            <svg class="icon icon-md">
              <use xlink:href="/images/symbol/svg/sprite.symbol.svg#search" />
            </svg>
          </a>
        </li>
      </ul>
      <form action="" class="masthead-search">
        <div class="input-group">
          <div class="input-group-btn">
            <button type="button" class="btn btn-default">
              <svg class="icon icon-md">
                <use xlink:href="/images/symbol/svg/sprite.symbol.svg#search" />
              </svg>
              Psychics
              <span class="arrow-down text-muted"></span>
            </button>
          </div>
          <input id="q" type="search" class="form-control">
          <div class="input-group-btn">
            <button type="button" class="btn btn-info btn-shaded">Go</button>
          </div>
        </div>
      </form>
    </div>

    <div class="masthead-messaging text-right u-padding-top visible-lg-block">
      <p><a class="text-default text-underline" href="">Our Satisfaction Guarantee</a></p>
      <p class="h2 u-no-margin-top">
        <a class="text-danger" href="tel:18009653049">
          <svg class="icon icon-md">
            <use xlink:href="/images/symbol/svg/sprite.symbol.svg#phone" />
          </svg>
          1.800.965.3049
        </a>
      </p>
      <p class="u-no-margin-bottom">Since 1989, the Most Respected Psychic Service</p>
    </div>

  </div>

</div>

<script>

$(function(){

  /**
   * TODO: The delay on small screens will need to be elaborated on once the
   * "Psychics/Articles" dropdown is integrated.
   */

  var $masthead = $('.masthead');
  var $toggle   = $('.masthead-search-toggle');
  var $field    = $('#q');
  var hideDelay = 2000;
  var hideTimeout;

  // open state
  $toggle.click(function (event) {
    event.preventDefault();
    $masthead.addClass('is-search-open');
    $field.click().focus();
  });

  // disable page zoom on focus
  $field
    .on('focus', function () {
      $.mobile.zoom.disable(true);
      clearTimeout(hideTimeout);
    })
    .on('blur', function () {
      $.mobile.zoom.enable(true);
      hideTimeout = setTimeout(function () {
        $masthead.removeClass('is-search-open');
      }, hideDelay);
    });

});

</script>
