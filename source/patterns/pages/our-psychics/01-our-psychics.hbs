{{> pages/_header }}

<div class="container-page">
  <div class="box-full box-default-sm box-lighter box-sheer">
    <div class="row no-gutters js-advisor-view-container">
      <div class="col-xs-12 col-sm-3 js-advisor-view" id="advisor-menu">
        <div class="u-margin visible-xs-block">
          {{> our-psychics/_filter-controls }}
        </div>
        {{> filters/filter-menu }}
        <div class="u-margin">
          {{> our-psychics/_filter-controls }}
        </div>
      </div>
      <div class="col-xs-12 col-sm-9 js-advisor-view" id="advisor-main">
        {{! WIP }}
        <div class="u-margin visible-xs-block text-right">
          <button class="btn btn-default btn-shaded" type="button" data-pushview="#advisor-menu">Filter</button>
        </div>
        {{! /WIP }}
        <div class="u-margin-sides u-margin-top hidden-xs">
          {{> tabs/tabs }}
        </div>
        {{> advisors/advisor-grid }}
        <div class="text-center">
          {{> pagination/states }}
        </div>
      </div>
    </div>
  </div>
</div>

<script>

function canUseSlideView () {
  return $('.js-advisor-view:visible').first().width() === $(window).width();
}

var slideView = $('.js-advisor-view-container').simpleSlideView({
  views:      '.js-advisor-view',
  activeView: '#advisor-main',
  deferOn:    !canUseSlideView()
});

$(window).resize(function(){
  slideView.toggle(canUseSlideView());
});

</script>

