// adds 20px padding to top and bottom if on desktop, 10px top bottom if on mobile. Used for my account sections
.u-padding-20-ends{
    padding-top:10px;
    padding-bottom:10px;
    @media (min-width: $screen-sm-max) {
       padding-top:20px; 
       padding-bottom:20px;
    }
}

// used to give padding to area on left and right if on mobile. Used on my account Account history page right panel 
.u-sm-padding-20-sides{
    padding-left:20px;
    padding-right:20px;
    @media (min-width: $screen-sm-max) {
       padding-left:0; 
       padding-right:0;
    }
}

// Used to wrap 2 columns and get rid of margin on desktop. Mobile makes it full width. Use 'overflow-hidden' on
// the parent to elimiate hor scroll bars on mobile
.u-sm-mar-10-sides{
    margin-left:-10px;
    margin-right:-10px;
    @media (min-width: $screen-sm-max) {
       margin-left:0; 
       margin-right:0;
    }
}

.u-padding-65-sides{
    padding-left:0;
    padding-right:0;
    width:100%;
    @media (min-width: $screen-xs-max) {
        padding-left:65px;
        padding-right:65px;
        width:auto;
    }
}